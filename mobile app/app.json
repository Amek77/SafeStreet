{
  "expo": {
    "scheme": "SafeStreet",
    "name": "SafeStreet-app",
    "slug": "SafeStreet-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/img/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to take photos of road damage",
        "NSPhotoLibraryUsageDescription": "We need gallery access to upload existing images",
        "NSLocationWhenInUseUsageDescription": "We need your location to tag road damage"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.example.safestreetapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "onnxruntime-react-native"
    ],
    "assetBundlePatterns": [
      "**/*",
      "assets/Model/*.onnx"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "your-eas-project-id-here"
      }
    }
  }
}